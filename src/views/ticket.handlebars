<div class="ticket-container">
    <h1 class="tituloLog">Ticket de Compra</h1>
    <div class="ticket-info">
        <p><strong>CÃ³digo:</strong> {{ticket.code}}</p>
        <p><strong>Fecha de Compra:</strong> {{formatDate ticket.purchase_datetime}}</p>
        <p><strong>Total:</strong> ${{ticket.amount}}</p>
        <p><strong>Comprador:</strong> {{ticket.purchaser}}</p>
    </div>
    {{#if failedItems.length}}
    <div class="failed-items">
        <h2>Productos no procesados por falta de stock:</h2>
        <ul>
            {{#each failedItems}}
            <li>{{this.product.title}} - Cantidad: {{this.quantity}}</li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    <a href="/products" class="btn btn-primary">Seguir Comprando</a>
</div>
